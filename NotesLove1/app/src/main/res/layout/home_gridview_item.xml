<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_item_ly_size"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_gridview_img"
            android:layout_width="@dimen/gridview_item_size"
            android:layout_height="@dimen/gridview_item_size"
            android:background="@color/food"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_gridview_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="杂项:1239.1元"
            android:layout_marginLeft="1dip"
            android:textColor="@color/white"
            android:textSize="@dimen/gridview_item_textsize" />
    </LinearLayout>

</LinearLayout>