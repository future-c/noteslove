<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ad_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/app_icon_iv"
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/app_info_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingLeft="10dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dip"
                android:textSize="14dip"
                android:textColor="@android:color/black"
                android:text="天天连萌" />

            <TextView
                android:id="@+id/app_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dip"
                android:textSize="14dip"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="5dip"
                android:text="12.5MB" />
        </LinearLayout>

        <Button
            android:id="@+id/download_bt"
            android:layout_width="@dimen/app_bt_weith"
            android:layout_height="@dimen/app_bt_heigh"
            android:background="@drawable/main_home_button_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/app_text_size"
            android:text="下载"
            android:layout_marginRight="15dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <TextView
        android:id="@+id/app_summarize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingLeft="10dip"
        android:paddingTop="4dip"
        android:paddingBottom="2dip"
        android:text="一款非常火爆的游戏"
        android:textColor="#898989"
        android:textSize="12dip"  />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__list_divider_holo_light" />
</LinearLayout>