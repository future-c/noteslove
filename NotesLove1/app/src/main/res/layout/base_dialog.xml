<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="8dip"
        android:paddingTop="16dip"
        android:text="@string/remove_bill"
        android:textColor="@color/main_background"
        android:textSize="20dip" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dip"
        android:background="@color/main_background" 
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/dialog_content_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="26dip"
        android:layout_marginBottom="10dip"
        android:text="您确定删除这笔账单？"
        android:textColor="#323232"
        android:textSize="16dip" />

    <ImageView
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#dbdbdb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_button_heigh"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_no_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:text="@string/cancel" />

        <ImageView
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#dbdbdb"
             android:contentDescription="@null"/>

        <Button
            android:id="@+id/dialog_yes_button"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:text="@string/determine" />
    </LinearLayout>

</LinearLayout>