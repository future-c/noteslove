<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="25dip"
        android:textColor="@color/babyBlue"
        android:textSize="18dip"
        android:text="备份管理" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="15dip"
        android:background="@color/main_background" />
    <TextView
        android:id="@+id/backup_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:textSize="16dip"
        android:paddingLeft="20dip"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="6dip"
        android:text="文件名:Nodets_2015-01-18.db\n文件大小:22KB\n备份时间:2015-01-18\n路径:d:/notes/notes/notes"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/select_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/restore_backup_bt"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:textColor="@android:color/black"
            android:background="@drawable/backup_dialog_bg"
            android:textSize="16dip"
            android:text="恢复" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/padding_dialog_line"
            android:layout_marginRight="@dimen/padding_dialog_line"
            android:background="@color/backup_cancel_line" />
        <Button
            android:id="@+id/delete_backup_bt"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:textColor="@android:color/black"
            android:background="@drawable/backup_dialog_bg"
            android:textSize="16dip"
            android:text="删除" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="@dimen/padding_dialog_line"
            android:layout_marginRight="@dimen/padding_dialog_line"
            android:background="@color/backup_cancel_line" />
        <Button
            android:id="@+id/desc_backup_bt"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:textColor="@android:color/black"
            android:background="@drawable/backup_dialog_bg"
            android:textSize="16dip"
            android:text="详情" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/backup_cancel_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backup_cancel_line"
        android:orientation="horizontal">
    <Button
        android:id="@+id/cancel_backup_bt"
        android:layout_width="0dip"
        android:layout_height="48dip"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:background="@drawable/backup_dialog_bg"
        android:textSize="16dip"
        android:text="取消" />
        <Button
            android:id="@+id/ok_backup_bt"
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:layout_marginLeft="1dip"
            android:textColor="@android:color/black"
            android:background="@drawable/backup_dialog_bg"
            android:textSize="16dip"
            android:text="确定"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>